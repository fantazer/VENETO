.head
	flex(between)
	align-items center
	padding: 10px 0
.logo
	width: 20%
.head__phone
	color $mark
	@extend .type--lgx
	font-weight 700
.head-tool
	f()
	align-items center
.head-login
	margin-right: 20px
	@extend .type--mdx
	font-weight 300
	text-decoration underline
	color #576873
.cart
	size 70px
	flex(mid)
	round()
	border 1px solid $mark
	.icon
		size 30px
		fill $mark
.nav
	padding: 10px 0
	border-top 1px solid $border-color
	border-bottom 1px solid $border-color
	f()
	align-items center
.nav-list
	width: 50%
	flex(between)
.nav-el
	color $mark
	font-weight 700
	@extend .type--md
.search
	f()
	margin-left auto
	width: 30%
	.input
		padding: 10px
		width: 100%
	.btn--md
		padding: 15px
//.btn--mark

.section
	padding: 80px 0 0 0
.section-title
	font-weight: 700
	up()
	color $mark
	font-size: 42px
	margin-bottom: 30px
	text-align center
.section-title--extend
	margin-bottom: 60px

.sale
	f()
	margin: 5% 0
.sale-content
	width: 50%
	background: white
	padding: 10% 5%
.sale-title
	font-weight:700
	color black
	@extend .type--lg
	margin-bottom: 20px
	display block
.sale-img
	bg-full()
	width: 50%
	padding: 20% 10%
	box-shadow -10px 1px 8px #d4e0e8
	margin-top: -3%
	margin-bottom: -3%
.sale-slider
	padding: 40px 0

// slick
// === убираем выделения активности при клик ===
.slick-slide
	&:hover
		outline none!important
	&:active
		outline none!important
	&:focus
		outline none!important
// === убираем выделения активности при клике end ===

// === for custom navigation ===
.slider-wrap
	position relative

//Навигация снаружи
.slider-wrap--simple
	.slider-control
		flex(mid)
		tr(all)
		size 40px
		background: white
		position: absolute
		top 50%
		margin-top: -20px
		z-index 10
		cp()
		border 1px solid #efefef
		&:hover
			background: $mark
			.icon
				fill white
		.icon
			size 14px
	.slider-control--left
		left -20px
	.slider-control--right
		right -20px

.slider-wrap--extend
	.slick-slide
		margin: 0 10px
	.slick-list
		margin: 0 -10px
.slick-track
	display: flex !important;
.slick-slide
	height: inherit !important;

.slick-track
	display: flex !important
	align-items:stretch

.slick-slide
	height: inherit !important
	display: flex !important
	justify-content: center
	align-items: stretch
	tr()
.slick-center
	transform: scale(1.2);
	box-shadow 0 18px 32px #a2b8c5
	opacity: 1 !important

//=== Внешний вид пагинации ===
.slick-dots
	+below(720px)
		bottom -20px
	width: 100%
	display: flex !important
	align-items: center
	justify-content: center
	bottom -20px
	li
		+below(720px)
			size 10px
			flex(mid)
	.dot
		+below(720px)
			flex(mid)
			size 6px
		background: $mark
		width: 20px
		height: 4px
		display: block
		br(3px)
		opacity: .2
	.slick-active
		.dot
			opacity: 1
//=== Внешний вид пагинации end===

//Навигация снаружи end

.slider-scale
	.slick-slide
		opacity: .8
	.slick-list
		padding: 100px 80px!important
	.slick-slide
		margin: 0 20px
.slider-scale--sm
	.slick-list
		padding: 60px 20px!important
// slick === end

.reestr
	display: grid
	grid-template-columns: repeat(4, 1fr)
	grid-template-rows: repeat(3, 1fr)
	grid-gap: 10px
	margin-top 30px
.reestr__el
	bg-full()
	padding: 12% 10%
	display block
	position relative
	bsh-hover()
.reestr__el-title
	text-align center
	background: #ffffffc4
	padding: 10px
	position absolute
	width: 100%
	left 0
	top 0
	color $mark
	@extend .type--mdx
	font-weight 700
.reestr__el-cat
	background: $mark
	color white
	padding: 10%
	up()
	font-size: 40px
	font-weight: 100
	bsh-hover()
	&:hover
		color white
.reestr__el--fasad
	grid-area: 1 / 1 / 3 / 3
.reestr__el--vitygki
	grid-area: 3 / 1 / 4 / 3
.reestr__el--rychka
	grid-area: 1 / 3 / 4 / 4
.reestr__el-cat
	grid-area: 1 / 4 / 2 / 5
.reestr__el--more
	grid-area: 2 / 4 / 4 / 5

.news-slider__el
	padding: 40px 30px 50px 30px
	background: white
	height: 100%
.news-slider__el-date
	@extend .type--sm
	color gray
	margin-bottom: 10px
.news-slider__el-title
	@extend .type--md
	font-weight: 500
	color $mark
	margin-bottom: 10px
	display block
.news-slider__el-text
	line-height: 1.6
	@extend .type--xs

.storage
	display: grid
	grid-gap 0px
	grid-template-columns: repeat(2, 1fr)

.storage__el
	f()
	background: white
	padding: 30px

	&:nth-child(2)
		box-shadow: 0px 2px 16px #657e8c
		transform translateY(20px)  translateX(-20px)
	&:nth-child(4)
		box-shadow: 0px 10px 16px #657e8c
		transform translateY(20px) translateX(-20px)
.storage__el--dark
	background: $mark
	color white
	.storage__el-title
		color white
.storage__el-icon
	size 80px
	margin-right: 20px

.storage__el-info
	width calc(100% - 100px)
.storage__el-title
	font-weight: 500
	margin-bottom: 10px
	@extend .type--md
	color $mark
.storage__el-text
	@extend .type--sm
	line-height: 1.4

.get-call
	flex(mid)
	margin: 100px 0 50px 0

.quality
	display: grid
	grid-gap 10px
	grid-template-columns: repeat(4, 1fr)
	margin-bottom: 60px
.quality__el
	f()
	fl()
	bsh-hover()
	&:nth-child(2)
		transform translateY(60px)
	&:nth-child(4)
		transform translateY(60px)
.quality__el-img
	bg-full()
	padding: 35% 10%
.quality__el-content
	background: white
	padding: 30px
	flex-grow 1
.quality__el-title
	font-weight: 700
	color $mark
	up()
	margin-bottom: 10px
.quality__el-text
	line-height: 1.4
	font-size: 15px

.partner__el
	padding: 30px
	background: white
	flex(mid)
	display flex!important
	height: 100%

.form
	flex(mid)
	max-width 1100px
