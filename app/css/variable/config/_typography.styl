font('Avenir','AvenirNextCyr-UltraLight',100)
font('Avenir','AvenirNextCyr-Thin',200)
font('Avenir','AvenirNextCyr-Light',300)
font('Avenir','AvenirNextCyr-Regular',400)
font('Avenir','AvenirNextCyr-Medium',500)
font('Avenir','AvenirNextCyr-Bold',700)

$v-font = 'Avenir', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

