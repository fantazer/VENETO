.type--xs
	typeSize(12,10)

.type--sm
	typeSize(15,12)

.type--main
	typeSize(17,14)

.type--md
	typeSize(20,16)

.type--mdx
	typeSize(25,18)

.type--lg
	typeSize(28,20)

.type--lgx
	typeSize(30,20)

.type--xl
	typeSize(35,24)

.type--bold
	font-weight bold

h1
	@extend .type--xl
h2
	@extend .type--lg
h3
	@extend .type--main
h4
	@extend .type--sm
h5
	@extend .type--xs

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $blue
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none
