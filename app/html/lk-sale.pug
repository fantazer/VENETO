include block_html/_style.pug
include block_html/_include.pug


.page
	+header()
	.content
		.main-cont
			+bread()
			.layer
				.toolbar
					.toolbar-item
						.toolbar-head Личный кабинет
						-
							var items = [
							'Заказы',
							'Рекламации',
							'Акции',
							'Регламенты',
							'Реквизиты',
							'Фотобанк',
							'Настройки'
							];
						each item,i in items
							a(href="#" class=i === 2 ? 'toolbar-el--active' : '').toolbar-el #{item}
					.toolbar-item
						.toolbar-head Ваш менеджер
						.toolbar-manager
							.toolbar-manager__el
								.toolbar-manager__name <b>Иванов Иван Иванович</b>
							.toolbar-manager__el <b>Тел:</b> 8 800 000 00 00
							.toolbar-manager__el <b>Почта:</b> ivanov@gmail.com
				.info
					.title Скидки
					- for (var i=0;i<3;i++)
						.lk-sale
							.lk-sale__name Фасадные системы:
							.lk-sale__val 5%
						.lk-sale
							.lk-sale__name Ручки:
							.lk-sale__val 15%
						.lk-sale
							.lk-sale__name Мебельный фурнитура:
							.lk-sale__val 25%

	+footer()
include ./block_html/_script.pug
